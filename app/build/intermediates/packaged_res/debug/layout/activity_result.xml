<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.result.ResultActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <TextView
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Identify Result"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.132"
        android:textStyle="bold"
        android:textSize="30sp"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_result"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@+id/result"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/ic_launcher_background"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/tv_result_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="desc"
        android:justificationMode="inter_word"
        app:layout_constraintTop_toBottomOf="@+id/img_result"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginStart="10dp"
        android:textSize="15sp"
        android:layout_marginEnd="10dp"/>

    <TextView
        android:id="@+id/tv_result_treatment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:justificationMode="inter_word"
        app:layout_constraintTop_toBottomOf="@+id/tv_result_desc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textSize="15sp"
        android:text="treatment"/>

    <TextView
        android:id="@+id/tv_result_preventation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:justificationMode="inter_word"
        app:layout_constraintTop_toBottomOf="@+id/tv_result_treatment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:textSize="15sp"
        android:text="preventation"/>


    <Button
        android:id="@+id/btn_result"
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:text="Home"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:backgroundTint="@color/brown"
        android:textColor="@color/black"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_result_preventation" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>