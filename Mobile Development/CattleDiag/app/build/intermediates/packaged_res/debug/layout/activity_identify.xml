<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.identify.IdentifyActivity">

    <TextView
        android:id="@+id/Identify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Identify"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.132"
        android:textStyle="bold"
        android:textSize="30sp"/>

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/Identify"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radioButtonSapi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sapi"/>

        <RadioButton
            android:id="@+id/radioButtonDomba"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Domba"/>

        <RadioButton
            android:id="@+id/radioButtonKerbau"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kerbau"/>

    </RadioGroup>
        

    <EditText
        android:id="@+id/ed_description"
        android:layout_width="0dp"
        android:layout_height="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:hint="Deskripsi Penyakit"
        android:inputType="text"
        android:maxLines="10"
        android:textSize="15sp"
        android:minHeight="40dp"
        android:ems="10"/>

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm"
        android:backgroundTint="@color/brown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ed_description"
        android:layout_marginTop="20dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>